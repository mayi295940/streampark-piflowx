<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.apache.streampark.console.flow.component.flow.mapper.FlowMapper">

    <select id="selectPage" resultType="org.apache.streampark.console.flow.component.flow.entity.Flow"
            parameterType="org.apache.streampark.console.flow.component.flow.entity.Flow">
        select * from flow
        <where>
            <if test="flow.name != null and flow.name != ''">
                and name like '%${flow.name}%'
            </if>
            <if test="flow.createTimeFrom != null and flow.createTimeFrom !=''">
                and create_time &gt; #{flow.createTimeFrom}
            </if>
            <if test="flow.createTimeTo!= null and flow.createTimeTo !=''">
                and create_time &lt; #{flow.createTimeTo}
            </if>
        </where>
        <if test="flow.sortField != null and flow.sortField != ''">
            order by ${flow.sortField} ${flow.sortOrder}
        </if>
    </select>


</mapper>
